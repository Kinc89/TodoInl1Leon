<html>
  <head>
    <link href="styles.css" rel="stylesheet" type="text/css">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script type="text/javascript" src="index.js"></script>
    <title> ToDo App </title>
  </head>
<body>
    <div class="topContainer">
      <h2 class="formH"> Things to do! </h2>
    </div>
  <div class="formContainer">
      <form class="todoForm" action ="/addtask" method="POST">
        <div class="wrap center"> <!-- Just to center ver and hor -->
          <div class="wrap-label">
              <label for="name">Your Name</label>
              <p class="iconicfill-pen-alt2"></p>
          </div>
          <!-- Föregående 'name' var 'name' -->
          <input type="text" name="newtask" id="name" placeholder="add new task">        
          <button type="submit" id="name"> Add Task </button>
        </div>

            
    </div>
          <h2> Your planned tasks </h2>
              <% for( let i = 0; i < taskArr.length; i++) { %>
              <li class="listControl"><%= taskArr[i] %> <a href="/taskEdit/<%= i %>">Edit</a> <a href="/delete/<%= i %>">Delete</a>  </li>
          <% } %>
      </form>
  </div>
</body>
</html>